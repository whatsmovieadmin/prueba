            android:name="ur.informaticamovil7.movies.Principal"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ur.informaticamovil7.movies.Registro"
            android:label="@string/title_activity_registro"
            android:screenOrientation="portrait"
            android:parentActivityName="ur.informaticamovil7.movies.Principal" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ur.informaticamovil7.movies.Principal" />
        </activity>
        <activity
            android:name="ur.informaticamovil7.movies.MenuMovies"
            android:label="@string/title_activity_menu"
            android:screenOrientation="portrait"
            android:parentActivityName="ur.informaticamovil7.movies.Principal" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ur.informaticamovil7.movies.Principal" />
        </activity>
        <activity
            android:name="ur.informaticamovil7.movies.Opciones"
            android:label="@string/title_activity_opciones"
            android:screenOrientation="portrait"
            android:parentActivityName="ur.informaticamovil7.movies.MenuMovies" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ur.informaticamovil7.movies.MenuMovies" />
        </activity>
    </application>

</manifest>