<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            
            <gradient
                android:startColor="#ffaf26"
                android:endColor="#edbe67"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#e19b1a" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
